<div class="container-fluid">
  <div class="row justify-content-center">
    <ul class="nav nav-tabs">
      <li class="nav-item">
        <a class="nav-link active" href="medicos">Medicos</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="pacientes">Pacientes</a>
      </li>
    </ul>
  </div>
  <div class="row justify-content-center">
    <div class="md-6">  

      <p id="notice"><%= notice %></p>

      <h1 class="text-center my-5">Medicos</h1>
      <% rowCount = @medicos.all.count 
          if rowCount>0
      %>
      <table class="table">
        <thead>
          <tr>
            <th>Nome</th>
            <th>Email</th>
            <th>Especialidade</th>
            <th colspan="3"></th>
          </tr>
        </thead>
      
        <tbody>
          <% @medicos.each do |medico| %>
            <tr>
              <td><%= medico.nome %></td>
              <td><%= medico.email %></td>
              <td><%= medico.especialidade %></td>
              <td><%= link_to 'Show', medico %></td>
              <td><%= link_to 'Edit', edit_medico_path(medico) %></td>
              <td><%= link_to 'Destroy', medico, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <% end %>
      <br>

      <%= link_to 'New Medico', new_medico_path %>
    </div>
  </div>
</div>
