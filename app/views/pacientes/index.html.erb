<div class="container-fluid">
  <div class="row justify-content-center">
    <ul class="nav nav-tabs">
      <li class="nav-item">
        <a class="nav-link" href="medicos">Medicos</a>
      </li>
      <li class="nav-item">
        <a class="nav-link active" href="pacientes">Pacientes</a>
      </li>
    </ul>
  </div>
  <div class="row justify-content-center">
    <div class="md-6">  

      <p id="notice"><%= notice %></p>

      <h1 class="text-center my-5">Pacientes</h1>
      <% rowCount = @pacientes.all.count 
          if rowCount>0
      %>

      <table class="table">
        <thead>
          <tr>
            <th>Nome</th>
            <th>Email</th>
            <th>Descrição do Problema</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @pacientes.each do |paciente| %>
            <tr>
              <td><%= paciente.nome %></td>
              <td><%= paciente.email %></td>
              <td><%= paciente.problema %></td>
              <td><%= link_to 'Show', paciente %></td>
              <td><%= link_to 'Edit', edit_paciente_path(paciente) %></td>
              <td><%= link_to 'Destroy', paciente, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <% end %>
      <br>

      <%= link_to 'New Paciente', new_paciente_path %>
    </div>
  </div>
</div>